<!doctype html>
<html>
  
  <head>
    <title>Sneaker Collector - My Portfolio</title>
  </head>
  
  <body>
    
    <h1>My Portfolio</h1>
    
  <div class="nav">
  <a class="active" href="/user/home/<%=current_user.id%>">Home</a><br><br>
  <a href="/leaderboard">Leaderboard</a><br><br>
  </div>
    
    <table>
      <style>
      table {
        border-collapse: collapse;
        width: 100%;
      }
      th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }
      tr:hover {
        background-color: #f5f5f5;
      }
    </style>
      <th>Manufacturer</th>
      <th>US Size</th>
      <th>Model</th>
      <th>Colorway</th>
      <th>Estimated Value</th>
      <th>Condition</th>
      <th>Notes</th>
  <tr>
    <% current_user.portfolio.sneakers.each do |sneaker| %>

   <%= sneaker.manufacturer %>
   <%= sneaker.size_us %>
   <%= sneaker.model %>
   <%= sneaker.colorway %>
   <%= sneaker.est_value %>
   <%= sneaker.condition %>
   <%= sneaker.notes %>

<% end %>
  </tr> 
    </table>

    <form action="/portfolio/<%= current_user.portfolio.id %>/new_sneaker">
    <input type="submit" value="Add Sneaker"/>
</form>
    
    
    
    
  </body>
  
</html>