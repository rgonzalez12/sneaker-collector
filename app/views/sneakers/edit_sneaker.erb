<!doctype html>
<html>
  
  <head>
    <title>Sneaker Collector - Edit Sneaker</title>
  </head>
  
  <body>
    <h1>Edit/Delete Sneaker</h1>
    
    <form action="/portfolio/<%= current_user.portfolio.id %>/<%= current_user.portfolio.sneakers.ids%>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
  Manufacturer:<br>
  <input value=<%= @sneaker.manufacturer %> type="text" name="manufacturer"><br><br>
  Model:<br>
  <input value=<%= @sneaker.model %> type="text" name="model"><br><br>
  US Size:<br>
  <input value=<%= @sneaker.size_us %> type="text" name="size_us"><br><br>
  Colorway:<br>
  <input value=<%= @sneaker.colorway %> type="text" name="colorway"><br><br>
  Condition:<br>
  <input value=<%= @sneaker.condition %> type="text" name="condition"><br><br>
  Estimated Value:<br>
  <input value=<%= @sneaker.est_value %> type="text" name="est_value"><br><br>
  Notes:<br>
  <input value=<%= @sneaker.notes %> type="text" name="notes"><br><br>
  <input type="submit" value="Update">
  
 
</form>
 <form method="POST" action="/portfolio/sneakers/<%= @sneaker.id %>">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete">
</form>
    
  </body>
  
</html>